<div id='container'>

  <h1>ZoomWorld PhotoBlog</h1>
  <h3>Sign in:</h3>
  <%= form_tag sessions_path, id: "form-sign-in" do %>
    <p class='error-message' id='error-signin'><%= @message_signin %></p>
    <ul class='list-no-bullets'>
    	<li><%= email_field_tag :email, nil, placeholder: "Email" %></li>
    	<li><%= password_field_tag :password, nil, placeholder: "Password" %></li>
    	<li><%= submit_tag "Sign in", id: "sign-in" %></li>
    </ul>
  <% end %>
  <h3>Or create an account:</h3>
  <%= form_for @user do |f| %>
    <p class='error-message'><%= @message_signup %></p>
    <ul class='list-no-bullets'>
  	  <li><%= f.email_field :email, placeholder: "Email" %></li>
  	  <li><%= f.password_field :password, placeholder: "Password" %></li>
  	  <li><%= f.password_field :password_confirm, placeholder: "Confirm Password" %></li>
  	  <li><%= f.submit "Create account", id: "create-account" %></li>
    </ul>
  <% end %>


</div>